{% extends "/base.jinja" %}
{% block content %}
<main id="main-content" class="rvt-layout__wrapper rvt-layout__wrapper--details">

    <!-- **********************************************************************
        Sidebar
    *********************************************************************** -->
    
    <div class="rvt-layout__sidebar [ rvt-p-top-xxl rvt-p-left-md rvt-bg-black-000 ]" id="section-nav">

        <!-- **********************************************************************
            Sidenav
        *********************************************************************** -->
        
        <nav class="rvt-sidenav" aria-labelledby="details-pages" data-rvt-sidenav>
            <span class="rvt-sidenav__label" id="details-pages">Dashboard</span>
            <ul class="rvt-sidenav__list">
                <li class="rvt-sidenav__item">
                    <a href="{{ url_for('dashboard') }}" class="rvt-sidenav__link" aria-current="page">List links</a>
                </li>
                <li class="rvt-sidenav__item">
                    <a href="{{ url_for('create_new') }}" class="rvt-sidenav__link">Create new link</a>
                </li>
                <li class="rvt-sidenav__item">
                    <a href="{{ url_for('link_analytics') }}" class="rvt-sidenav__link">View analytics</a>
                </li>
                <li class="rvt-sidenav__item">
                    <a href="{{ url_for('export_link_data') }}" class="rvt-sidenav__link">Export data</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="rvt-layout__content [ rvt-p-top-xxl rvt-p-lr-md rvt-p-lr-xxl-md-up ]">
        <div class="rvt-prose">

            <!-- **************************************************************
                Page title
            *************************************************************** -->

            <h1 class="rvt-m-top-xs">Resource details</h1>
        </div>
        
        <!-- ******************************************************************
            Content sections
        ******************************************************************* -->

        <div class="rvt-container-lg rvt-m-top-xl rvt-m-left-none rvt-m-right-none rvt-p-right-none rvt-p-left-none">
            <div class="rvt-row">
                <div class="rvt-cols-8-lg">
                    <div class="rvt-prose rvt-flow">

                        <!-- **************************************************
                            Section #1 header
                        *************************************************** -->

                        <div class="rvt-flex-md-up rvt-items-center rvt-p-bottom-xs rvt-p-lr-xxs rvt-border-bottom">
                            
                            <!-- **********************************************
                                Header title
                            *********************************************** -->
                            
                            <h2 class="rvt-grow-1 rvt-ts-18 rvt-text-regular">Account Details</h2>

                            <!-- **********************************************
                                Right-aligned action link
                            *********************************************** -->

                            <a href="#0" class="rvt-flex rvt-items-center rvt-link-plain rvt-m-top-sm rvt-m-top-none-md-up">
                                <svg class="rvt-color-blue-300" fill="currentColor" width="16" height="16" viewBox="0 0 16 16"><path d="M9 7v5H7V7h2ZM8 4a1 1 0 1 0 0 2 1 1 0 0 0 0-2Z"></path><path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6a6 6 0 1 0 0 12A6 6 0 0 0 8 2Z"></path></svg>
                                <span class="rvt-ts-14 rvt-m-left-xs">Manage Details</span>
                            </a>
                        </div>

                        <!-- **************************************************
                            Section #1 content
                        *************************************************** -->

                        <dl class="rvt-list-description rvt-m-top-lg">
                            <dt>Username</dt>
                            <dd>username</dd>
                            <dt>Display name</dt>
                            <dd>Norval Ashton</dd>
                            <dt>Owner</dt>
                            <dd>username</dd>
                            <dt>Purpose</dt>
                            <dd>Manages approvals for student applications</dd>
                        </dl>

                        <!-- **************************************************
                            Section #2 header
                        *************************************************** -->

                        <div class="rvt-flex-md-up rvt-items-center rvt-p-bottom-xs rvt-p-lr-xxs rvt-border-bottom rvt-m-top-xxl">
                            
                            <!-- **********************************************
                                Header title
                            *********************************************** -->
                            
                            <h2 class="rvt-grow-1 rvt-ts-18 rvt-text-regular">Access</h2>
                            
                            <!-- **********************************************
                                Right-aligned action link
                            *********************************************** -->

                            <a href="#0" class="rvt-flex rvt-items-center rvt-link-plain rvt-m-top-sm rvt-m-top-none-md-up">
                                <svg class="rvt-color-blue-300" fill="currentColor" width="16" height="16" viewBox="0 0 16 16"><path d="M9 7v5H7V7h2ZM8 4a1 1 0 1 0 0 2 1 1 0 0 0 0-2Z"></path><path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6a6 6 0 1 0 0 12A6 6 0 0 0 8 2Z"></path></svg>
                                <span class="rvt-ts-14 rvt-m-left-xs">Manage Access</span>
                            </a>
                        </div>

                        <!-- **************************************************
                            Section #2 content
                        *************************************************** -->

                        <div class="rvt-row rvt-row--loose">
                            <div class="rvt-cols-6-md">
                                <dl class="rvt-list-description rvt-m-top-lg">
                                    <dt>
                                        <svg fill="currentColor" width="16" height="16" viewBox="0 0 16 16"><path d="M8 3a3 3 0 1 1 6 0 3 3 0 0 1-6 0ZM0 13a3 3 0 0 1 3-3h4a3 3 0 0 1 3 3v3H0v-3Z"></path><path d="M8.873 7.003a4 4 0 0 1-1.278 2.041A4 4 0 0 1 11 13h5v-3a3 3 0 0 0-3-3H9c-.042 0-.085 0-.127.003ZM5 3a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z"></path></svg>
                                        <span class="rvt-m-left-xxs">Users</span>
                                    </dt>
                                    <dd>Norval Ashton</dd>
                                    <dd>Alisha Mercedes</dd>
                                    <dd>Adam Jana</dd>
                                </dl>
                            </div>
                            <div class="rvt-cols-6-md">
                                <dl class="rvt-list-description rvt-m-top-lg">
                                    <dt>
                                        <svg fill="currentColor" width="16" height="16" viewBox="0 0 16 16"><path d="M8 3a3 3 0 1 1 6 0 3 3 0 0 1-6 0ZM0 13a3 3 0 0 1 3-3h4a3 3 0 0 1 3 3v3H0v-3Z"></path><path d="M8.873 7.003a4 4 0 0 1-1.278 2.041A4 4 0 0 1 11 13h5v-3a3 3 0 0 0-3-3H9c-.042 0-.085 0-.127.003ZM5 3a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z"></path></svg>
                                        <span class="rvt-m-left-xxs">Administrators</span>
                                    </dt>
                                    <dd>Kendall Cristal</dd>
                                </dl>
                            </div>
                        </div>

                        <!-- **************************************************
                            Section #3 header
                        *************************************************** -->

                        <div class="rvt-flex-md-up rvt-items-center rvt-p-bottom-xs rvt-p-lr-xxs rvt-border-bottom rvt-m-top-xxl">
                            <h2 class="rvt-grow-1 rvt-ts-18 rvt-text-regular">Plugins</h2>
                        </div>

                        <!-- **************************************************
                            Empty state

                            -> rivet.iu.edu/components/empty-state/
                        *************************************************** -->

                        <div class="rvt-empty-state [ rvt-m-top-lg ]">
                            <div class="rvt-empty-state__content [ rvt-flow ]">
                                <div class="rvt-p-all-md rvt-bg-black-100 rvt-inline-flex rvt-border-radius-circle">
                                    <svg fill="currentColor" width="16" height="16" viewBox="0 0 16 16"><path d="M10 14h5.5v-2h-1.382l-.366-.733a2.86 2.86 0 0 1-.298-1.12l-.234-4.209A5.23 5.23 0 0 0 9 1.096V0H7v1.096a5.23 5.23 0 0 0-4.22 4.842l-.234 4.209a2.86 2.86 0 0 1-.298 1.12L1.882 12H.5v2H6a2 2 0 1 0 4 0Zm1.886-2H4.114a4.86 4.86 0 0 0 .429-1.742l.234-4.209a3.228 3.228 0 0 1 6.446 0l.234 4.209A4.86 4.86 0 0 0 11.886 12Z"></path></svg>
                                </div>
                                <p>This is the default empty state. Would you like to create an item?</p>
                            </div>
                            <div class="rvt-empty-state__actions">
                                <button class="rvt-button" type="button">Create an item</button>
                                <a href="#0" class="rvt-button rvt-button--plain">Read the documentation</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}